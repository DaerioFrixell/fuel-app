{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "webpack.config.ts" // Все файлы в папке src
  ],
  "exclude": [
    "node_modules",
    "dist" // Исключаем папку dist
  ]
}
